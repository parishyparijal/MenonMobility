# ===========================================================
# MenonTrucks â€“ Environment Variables
# ===========================================================

# -----------------------------------------------------------
# Application
# -----------------------------------------------------------
APP_NAME=MenonTrucks
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_URL=http://localhost

# -----------------------------------------------------------
# Nginx
# -----------------------------------------------------------
NGINX_PORT=80

# -----------------------------------------------------------
# Node / Nuxt
# -----------------------------------------------------------
NODE_PORT=3000
NUXT_PUBLIC_API_BASE=http://localhost/api

# -----------------------------------------------------------
# Database (PostgreSQL)
# -----------------------------------------------------------
DB_CONNECTION=pgsql
DB_HOST=postgres
DB_PORT=5432
DB_FORWARD_PORT=5432
DB_DATABASE=menontrucks
DB_USERNAME=menontrucks
DB_PASSWORD=secret

# -----------------------------------------------------------
# Redis
# -----------------------------------------------------------
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_FORWARD_PORT=6379
REDIS_PASSWORD=null

# -----------------------------------------------------------
# Cache / Queue / Session
# -----------------------------------------------------------
CACHE_DRIVER=redis
QUEUE_CONNECTION=redis
SESSION_DRIVER=redis
SESSION_LIFETIME=120

# -----------------------------------------------------------
# Elasticsearch
# -----------------------------------------------------------
ELASTICSEARCH_HOST=elasticsearch
ELASTICSEARCH_PORT=9200
ELASTICSEARCH_FORWARD_PORT=9200

# -----------------------------------------------------------
# MinIO (S3-compatible storage)
# -----------------------------------------------------------
MINIO_ROOT_USER=menontrucks
MINIO_ROOT_PASSWORD=secret123
MINIO_BUCKET=menontrucks
MINIO_API_PORT=9000
MINIO_CONSOLE_PORT=9001

FILESYSTEM_DISK=s3
AWS_ACCESS_KEY_ID=menontrucks
AWS_SECRET_ACCESS_KEY=secret123
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=menontrucks
AWS_ENDPOINT=http://minio:9000
AWS_USE_PATH_STYLE_ENDPOINT=true

# -----------------------------------------------------------
# Mail (Mailpit)
# -----------------------------------------------------------
MAIL_MAILER=smtp
MAIL_HOST=mailpit
MAIL_PORT=1025
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS=hello@menontrucks.com
MAIL_FROM_NAME="${APP_NAME}"
MAILPIT_PORT=8025

# -----------------------------------------------------------
# Logging
# -----------------------------------------------------------
LOG_CHANNEL=stack
LOG_LEVEL=debug
