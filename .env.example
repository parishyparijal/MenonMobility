# ===========================================
# MenonTrucks Environment Variables
# ===========================================

# App
NODE_ENV=development
APP_URL=http://localhost

# Frontend (Next.js)
NEXT_PUBLIC_API_URL=http://localhost:5001/api
NEXT_PUBLIC_APP_URL=http://localhost:3001
NEXT_PUBLIC_WS_URL=ws://localhost:5001

# Backend (Express)
API_PORT=5001
API_SECRET=your-api-secret-key-change-me
JWT_ACCESS_SECRET=your-jwt-access-secret-change-me
JWT_REFRESH_SECRET=your-jwt-refresh-secret-change-me
JWT_ACCESS_EXPIRY=15m
JWT_REFRESH_EXPIRY=7d

# PostgreSQL
DATABASE_URL=postgresql://menontrucks:menontrucks@postgres:5432/menontrucks
POSTGRES_USER=menontrucks
POSTGRES_PASSWORD=menontrucks
POSTGRES_DB=menontrucks

# Redis
REDIS_URL=redis://redis:6379
REDIS_HOST=redis
REDIS_PORT=6379

# Elasticsearch
ELASTICSEARCH_URL=http://elasticsearch:9200
ELASTICSEARCH_INDEX=listings

# S3 / MinIO
S3_ENDPOINT=http://minio:9000
S3_ACCESS_KEY=minioadmin
S3_SECRET_KEY=minioadmin
S3_BUCKET=menontrucks
S3_REGION=us-east-1

# Stripe
STRIPE_SECRET_KEY=sk_test_your-stripe-key
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_your-stripe-key

# Email (Mailpit for dev)
SMTP_HOST=mailpit
SMTP_PORT=1025
SMTP_USER=
SMTP_PASS=
MAIL_FROM=noreply@menontrucks.com
MAIL_FROM_NAME=MenonTrucks

# Cloudflare (production)
CLOUDFLARE_ACCOUNT_ID=
CLOUDFLARE_API_TOKEN=
CDN_URL=
